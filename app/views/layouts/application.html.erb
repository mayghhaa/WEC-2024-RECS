<!DOCTYPE html>
<html>
  <head>
    <title>Wec1</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= button_to(
        "Log Out",
        destroy_user_session_path,
        method: :delete
      ) %>

      <!-- Button to go to Announcements -->
      <%= link_to "View Announcements", announcements_path, class: "button" %>

    <% else %>
      <%= button_to("Sign in", new_user_session_path ) %>
    <% end %>

    <%= yield %>
  </body>
</html>
