<h1 class="text-center mb-4">New Announcement</h1>

<div class="container">
  <%= form_with(model: @announcement, local: true, class: "needs-validation") do |f| %>
    <div class="mb-3">
      <%= f.label :subject, class: "form-label" %>
      <%= f.text_field :subject, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :content, class: "form-label" %>
      <%= f.text_area :content, class: "form-control", rows: 5, required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :club_id, "Select Club", class: "form-label" %>
      <%= f.collection_select :club_id, @clubs, :id, :name, prompt: "Choose a Club", class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= f.label :sig_id, "Select SIG (Optional)", class: "form-label" %>
      <%= f.collection_select :sig_id, @sigs, :id, :name, prompt: "Choose a SIG", class: "form-select" %>
    </div>

    <div class="d-grid gap-2">
      <%= f.submit "Create Announcement", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
