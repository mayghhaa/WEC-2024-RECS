<h1>Edit Registration for <%= @registration.user.email %></h1>

<%= form_with(model: @registration, url: club_sig_registration_path(@club, @sig, @registration), local: true) do |form| %>
  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, options_for_select(['pending', 'accepted', 'rejected'], @registration.status), { include_blank: 'Select Status' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :moving_forward %>
    <%= form.check_box :moving_forward, {}, true, false %>
  </div>

  <%= form.submit 'Update Registration', class: 'btn btn-primary' %>
<% end %>
