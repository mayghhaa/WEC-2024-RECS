<div class="container">
  <h1><%= @club.name %></h1>
  <p><%= @club.description %></p>

<% if current_user.student? && @club.sigs.any? && @club.schedules.any? %>
  <%= link_to 'Register for Recruitment', new_club_registration_path(@club), class: "btn btn-primary mb-4" %>
<% end %>


  <h2>Special Interest Groups (SIGs)</h2>

  <% if @club.sigs.any? %>
    <ul class="list-group mb-4">
      <% @club.sigs.each do |sig| %>
        <li class="list-group-item">
          <strong><%= link_to sig.name, club_sig_path(@club, sig) %></strong>
          <p><%= sig.description %></p>
          
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No Special Interest Groups have been created for this club yet.</p>
  <% end %>

  <% if current_user_convener?(@club) %>
    <div class="d-flex justify-content-start gap-2 mb-4"> 
      <%= link_to 'Edit Club', edit_club_path(@club), class: "btn btn-secondary" %>
      <%= link_to 'Add SIG', new_club_sig_path(@club), class: "btn btn-secondary" %>
      <%= link_to 'Create Announcement', new_announcement_path, class: "btn btn-secondary" %>
      <%# <%= button_to 'Delete Club', club_path(@club), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure you want to delete this club?' } %> 
    </div>
  <% end %>

  <%= link_to 'Back to Clubs', clubs_path, class: "btn btn-secondary" %>
</div>
