<h1>Edit Round for <%= @club.name %></h1>

<%= form_with(model: [@club, @round], local: true) do |f| %>
  <div class="form-group">
    <%= f.label :round_name %>
    <%= f.text_field :round_name, value: @round.round_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :round_type %>
    <%= f.select :round_type, options_for_select(['Type 1', 'Type 2', 'Type 3'], @round.round_type), { prompt: 'Select Round Type' }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.date_select :start_date, selected: @round.start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_date %>
    <%= f.date_select :end_date, selected: @round.end_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :link %>
    <%= f.url_field :link, value: @round.link, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :venue %>
    <%= f.text_field :venue, value: @round.venue, class: "form-control" %>
  </div>

  <%= f.hidden_field :club_id, value: @club.id %>
  <% if @sig %>
    <%= f.hidden_field :sig_id, value: @sig.id %>
  <% end %>

  <%= f.submit "Update Round", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to Rounds", club_rounds_path(@club), class: "btn btn-secondary" %>
