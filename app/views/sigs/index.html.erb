<h1 class="text-center mb-4">SIGs for <%= @club.name %></h1>

<div class="container">
  <div class="mb-3">
    <%= link_to 'Create New SIG', new_club_sig_path(@club), class: "btn btn-primary" %>
  </div>

  <% if @sigs.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @sigs.each do |sig| %>
          <tr>
            <td><%= sig.name %></td>
            <td><%= sig.description %></td>
            <td>
              <%= link_to 'Show', club_sig_path(@club, sig), class: "btn btn-info btn-sm" %>
              <%= link_to 'Edit', edit_club_sig_path(@club, sig), class: "btn btn-warning btn-sm" %>
              <%= link_to 'Destroy', club_sig_path(@club, sig), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
              <%= link_to 'Registered Students', registered_students_club_sig_path(@club, sig), class: "btn btn-primary btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info" role="alert">
      No SIGs found for this club.
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to 'Back to Clubs', clubs_path, class: "btn btn-secondary" %>
  </div>
</div>
