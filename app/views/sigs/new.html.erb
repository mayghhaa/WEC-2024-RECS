<h1 class="text-center mb-4">Create New SIG for <%= @club.name %></h1>

<div class="container">
  <%= form_with(model: [@club, @sig], local: true, class: "needs-validation") do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control", rows: 5, required: true %>
    </div>

    <div class="d-grid gap-2">
      <%= f.submit "Create SIG", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to 'Back to Club', club_path(@club), class: "btn btn-secondary" %>
  </div>
</div>
