<h1>Create New SIG for <%= @club.name %></h1>

<%= form_with(model: [@club, @sig], local: true) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit "Create SIG" %>
  </div>
<% end %>

<%= link_to 'Back to Club', club_path(@club) %>
