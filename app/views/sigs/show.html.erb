<h1><%= @sig.name %></h1>
<p><%= @sig.description %></p>

<h2>Recruitment Events</h2>
<% if @sig.schedules.any? %>
  <ul>
    <% @sig.schedules.each do |schedule| %>
      <li>
        <strong>Schedule Name:</strong> <%= link_to schedule.name, club_sig_schedule_path(@sig.club, @sig, schedule) %><br>
        
        <!-- Add other schedule fields as needed -->
        <strong>Number of Rounds:</strong> <%= schedule.rounds.count %><br>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No recruitment events scheduled.</p>
<% end %>

<%= link_to 'Add Recruitment Event', new_club_sig_schedule_path(@sig.club, @sig), class: "btn btn-primary" %>
<%= link_to 'Back to SIGs', club_sigs_path(@sig.club), class: "btn btn-secondary" %>
